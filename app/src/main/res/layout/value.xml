<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="123"
        android:layout_height="wrap_content"
        tools:showIn="@layout/activity_main">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/current_eth_container"
                  android:layout_gravity="center_horizontal"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/current_eth"
                android:fontFamily="sans-serif"
                android:textSize="32sp"
                android:lines="1"
                tools:text="\?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:fontFamily="sans-serif-thin"
                android:textSize="32sp"
                android:text="ETH"
                android:lines="1"
                android:layout_below="@id/current_eth"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:id="@+id/current_fiat_container"
                  android:orientation="horizontal">
        <TextView
                android:id="@+id/current_fiat"
                android:fontFamily="sans-serif-condensed"
                android:textSize="24sp"
                android:lines="1"
                tools:text="\?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/current_fiat_symbol"
                android:background="?selectableItemBackgroundBorderless"
                android:fontFamily="sans-serif-thin"
                android:textSize="24sp"
                android:text="EUR"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>